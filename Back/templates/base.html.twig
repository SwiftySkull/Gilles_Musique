<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                {# <a class="navbar-brand" href="http://relaxeco.free.fr/" target="_blank" rel="noreferrer noopener" onclick="return confirm('Être redirigé(e) vers le site ?')">Relax & Co</a> #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {% block homeActive %}{% endblock %}" aria-current="page" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% block actuActive %}{% endblock %}" href="{{ path('actu_browse') }}">Actualités</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {% block musicActive %}{% endblock %}" href="{{ path('music_browse') }}">Groupes</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
        <div class="container" style="max-width: 90%">
            <div class="col">
                <div class="row">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <div style="width: 100%; margin-top: 2rem;"><img style="width: 100%" src="{{ asset('images/banner.jpg') }}" alt="" /></div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>    
    </body>
</html>
