{% extends 'base.html.twig' %}

{% block title %}Hello ActuMainController!{% endblock %}

{% block actuActive %}active{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 90%; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Présentation de l'actualité</h1>
    <a href="{{ path('actu_browse') }}" class="btn btn-primary">Retour à la liste des actualités</a>

    <div style="text-align: center">
        <img style="max-height: 200px; margin: 1rem 0" src="{{ asset(actu.picture) }}" alt="{{ actu.title }}" />
    </div>
    <h2 style="text-align: center; margin: 1rem 0">{{ actu.title }}</h2>
    <p>{{ actu.date|date }}</p>
    <p>{{ actu.content|raw }}</p>

    <div style="display: flex; justify-content: center; margin: 2rem 0">
        <form action="{{ path('actu_edit', {id: actu.id}) }}" style="margin-right: 1rem" method="POST">
            <input type="hidden" name="token" value="{{ csrf_token('add-edit-item') }}"/>
            <button class="btn btn-warning">Modifier</button>
        </form>
        <form action="{{ path('actu_delete', {id: actu.id}) }}" onsubmit="return confirm('Supprimer Actualité : {{ actu.title }} ?')" method="POST">
            <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}"/>
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    </div>
    <a href="{{ path('actu_browse') }}" class="btn btn-primary">Retour à la liste des actualités</a>
</div>
{% endblock %}
